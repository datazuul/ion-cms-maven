<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
	<servlet>
		<servlet-name>section</servlet-name>
		<servlet-class>org.nextime.ion.frontoffice.servlet.SectionServlet</servlet-class>
		<init-param>
			<param-name>relativePath</param-name>
			<param-value>../../conf/templates.xml</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>publication</servlet-name>
		<servlet-class>org.nextime.ion.frontoffice.servlet.PublicationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>changeLocale</servlet-name>
		<servlet-class>org.nextime.ion.frontoffice.servlet.ChangeLocaleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>pdfPipe</servlet-name>
		<servlet-class>org.nextime.ion.frontoffice.servlet.PdfPipeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>resources</servlet-name>
		<servlet-class>org.nextime.ion.common.ResourceServlet</servlet-class>
		<init-param>
			<param-name>relativePath</param-name>
			<param-value>../../resources</param-value>
		</init-param>
		<init-param>
			<param-name>configPath</param-name>
			<param-value>../../conf/resources.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>cache</servlet-name>
		<servlet-class>org.nextime.ion.frontoffice.smartCache.SmartCacheManager</servlet-class>
		<init-param>
			<param-name>cacheTime</param-name>
			<param-value>5</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>section</servlet-name>
		<url-pattern>/section/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>publication</servlet-name>
		<url-pattern>/publication/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resources</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>changeLocale</servlet-name>
		<url-pattern>/changeLocale/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>pdfPipe</servlet-name>
		<url-pattern>/pdfPipe/*</url-pattern>
	</servlet-mapping>
	<!-- The Usual Welcome File List -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- les pages d'erreur -->
	<error-page>
		<exception-type>org.nextime.ion.frontoffice.exception.IdNotFoundException</exception-type>
		<location>/templates/pageNotFound.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/templates/pageNotFound.jsp</location>
	</error-page>
	<!-- The J2EE datasource for DB connection pooling -->
	<resource-ref>
		<description>ION DB Connection</description>
		<res-ref-name>jdbc/ionDatabase</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
